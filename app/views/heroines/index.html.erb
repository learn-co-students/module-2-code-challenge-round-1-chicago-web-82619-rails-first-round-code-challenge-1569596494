<h2>All Heroines</h2>

<%= form_with(url: "/powers", method: "get") do %>
  <%= label_tag(:power_id, "Search for:") %>
  <%= text_field_tag(:power_id) %>
  <%= submit_tag("Search") %>
<% end %>


<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine %>
    </li>
    <br>
  <% end %>
</ul>

<p><%= link_to "new heroine", new_heroine_path %></p>
