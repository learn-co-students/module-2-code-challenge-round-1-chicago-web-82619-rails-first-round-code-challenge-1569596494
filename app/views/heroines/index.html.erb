<h2>All Heroines</h2>

<%= form_with(url: "/heroines", method: "get") do %>
  <%= label_tag(:power_name, "Search by super power:") %>
  <%= text_field_tag(:power_name) %>
  <%= submit_tag("Search") %>
<% end %>
<ul>
  <% @heroines.each do |heroine| %>
    <li>
        <%= link_to heroine.super_name, heroine %>
    </li>
    <br>
  <% end %>
</ul>

<p><%= link_to "new heroine", new_heroine_path %></p>
<p><%= link_to "all heroines", heroines_path %></p>
