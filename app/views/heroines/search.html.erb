<h2><%= link_to "All Heroines", heroines_path %></h2>

<%= form_with(url: "/search", method: "get") do %>
  <b><%= label_tag(:q, "Search By Superpower:") %></b><br>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>



<p>Heroine(s) with Super Power: <%= @results.first.power.name %> </p>

<ul>
<% @results.each do |result| %>
  <li><%= link_to result.super_name, heroine_path(result) %></li>
<% end %>
</ul>

<p><%= link_to "Back", heroines_path %></p>