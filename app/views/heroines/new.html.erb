<h2>Create New Heroine:</h2>

<% if @heroine.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @heroine.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @heroine do |f| %>
  <%= f.label "Name:"%>
  <%= f.text_field :name %>

  <%= f.label "Super Name: "%>
  <%= f.text_field :super_name%>

  <%= f.label "Choose a superpower: "%>
  <%= f.collection_select :power_id, Power.all, :id, :name %>

  <%= f.submit%>
<% end %>
